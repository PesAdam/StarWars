{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "*": ["src/*"]
      },
      "allowJs": true,
      "jsxImportSource": "react"
    },
    "include": ["src/**/*", "src/**/*.scss"],
    
    "exclude": ["node_modules", "build", "scripts"]
  }